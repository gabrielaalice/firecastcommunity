<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="30dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_gravity="center"
    tools:context="com.example.gabriela.firecastcommunity.FilterActivity">

    <LinearLayout
        android:id="@+id/about_us_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Cidade:"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/city_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Distância(KM)"
            android:layout_marginTop="20dp"
            android:gravity="center"
            />

        <SeekBar
            android:id="@+id/distance_seekbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tipos de Ocorrências"
            android:layout_marginTop="20dp"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:src="@drawable/car_accident_icon" />
            <CheckBox
                android:id="@+id/acidente_transito"
                android:text="Acidente de Trânsito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:src="@drawable/paramedics_icon" />
            <CheckBox
                android:id="@+id/atendimento_pre_hospitalar"
                android:text="Atendimento pré-hospitalar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:src="@drawable/support_icon" />
            <CheckBox
                android:id="@+id/auxilios_apoios"
                android:text="Auxílios/Apoios"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:src="@drawable/tree_cutting_icon" />
            <CheckBox
                android:id="@+id/averiguacao_corte"
                android:text="Averiguação / Corte de árvore"
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:src="@drawable/insect_control_icon" />
            <CheckBox
                android:id="@+id/averiguacao_manejo_insect"
                android:text="Averiguação / Manejo de Inseto"
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:src="@drawable/tree_cutting_icon" />
            <CheckBox
                android:id="@+id/acoes_preventivas"
                android:text="Ações Preventivas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:src="@drawable/other_icon" />
            <CheckBox
                android:id="@+id/diversos"
                android:text="Diversos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:src="@drawable/fire_icon" />
            <CheckBox
                android:id="@+id/incendio"
                android:text="Incêncio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:src="@drawable/other_icon" />
            <CheckBox
                android:id="@+id/ocorrencia_nao_atendida"
                android:text="Ocorrência não Atendida"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:src="@drawable/dangerous_product_icon" />
            <CheckBox
                android:id="@+id/produtos_perigosos"
                android:text="Produtos Perigosos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:src="@drawable/search_rescue_icon" />
            <CheckBox
                android:id="@+id/salvamento"
                android:text="Salvamento / Busca / Resgate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>