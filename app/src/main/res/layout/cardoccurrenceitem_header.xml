<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardoccurrenceitem__type"
            tools:text="ACIDENTE DE TRÂNSITO"
            tools:background="@color/cardview_light_background"
            android:padding="8dp"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            android:height="48dp"
            android:textSize="16sp"
            android:gravity="center"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:weightSum="52"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_arrow"
                    android:layout_width="26dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="7dp"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:src="@mipmap/more" />
            </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey"
        android:weightSum="53">
        <TextView
            android:id="@+id/cardoccurrenceitem__description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lançado há 10 minutos"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cardoccurrenceitem__hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="4dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <ImageButton
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:id="@+id/cardoccurrenceitem__share"
                    android:src="@mipmap/share2"
                    android:layout_marginRight="3dp"
                    android:actionProviderClass="android.widget.ShareActionProvider" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:orientation="horizontal"
                android:gravity="end">
                <TextView
                    android:id="@+id/cardoccurrenceitem__distance"
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginRight="7dp"
                    tools:text="Em 1.4 km"/>

                <ImageButton
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/navigation4"
                    android:id="@+id/cardoccurrenceitem__navigate"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</FrameLayout>