    android:layout_width="match_parent"
    android:id="@+id/contentRadio"
    android:layout_height="match_parent"
    tools:context="com.example.gabriela.firecastcommunity.fragment.RadioFragment">

        <Button
            android:id="@+id/playRadio"
            android:layout_width="match_parent"
