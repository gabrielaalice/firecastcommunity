<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/contentRadio"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background_aboutus"
    tools:context="com.example.gabriela.firecastcommunity.fragment.RadioFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="@string/radio_title"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="@string/radio_description"
                    android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">

                <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="@string/city_spinner"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/city_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="@string/radio_type"
                    android:layout_marginBottom="5dp"/>

                <Spinner
                    android:id="@+id/radio_type_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="55dp"
                    >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginRight="70dp"
                            android:orientation="vertical">


                                <ImageButton
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginLeft="0dp"
                                    android:src="@mipmap/pause_radio_btn" />

                                <ImageButton
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginLeft="50dp"
                                    android:src="@mipmap/play_radio_btn" />
                        </RelativeLayout>
                </RelativeLayout>
        </LinearLayout>
        </LinearLayout>

</FrameLayout>
